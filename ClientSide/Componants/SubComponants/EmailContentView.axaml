<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             Width="200"
             x:Class="ClientSideComponants.EmailContentView">
    <StackPanel Margin="5">
        <TextBlock Text="Subject  :"/>
        <TextBlock Name="SubjectBox"/>
        <StackPanel Name="DownloadButtonSucc" Orientation="Horizontal">
            <TextBlock  Text="Status" 
                        TextAlignment="Right"
                        Width="75"/>
            <TextBlock  Text="Accepted" 
                        TextAlignment="Right"
                        Foreground="Green" 
                        Width="75"/>
        </StackPanel>
        <StackPanel Name="DownloadButtonFail" Orientation="Horizontal">
            <TextBlock  Text="Status" 
                        TextAlignment="Right"
                        Width="75"/>
            <TextBlock  Text="Refused" 
                        TextAlignment="Right" 
                        Foreground="Red"
                        Width="75"/>
        </StackPanel>
    </StackPanel>
</UserControl>
